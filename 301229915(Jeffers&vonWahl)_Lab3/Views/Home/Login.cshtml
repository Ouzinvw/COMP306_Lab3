@model User

@{
	ViewData["Title"] = "Login";
}

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-success">User Login</h2>
			<hr />
		</div>
		<div class="mb-3 row">
			<label>Username</label>
			<input asp-for="username" class="form-control" />
		</div>
		<div class="mb-3 row">
			<label>Password</label>
			<input asp-for="password" class="form-control" />
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-success form-control">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Movies" asp-action="Index" class="btn btn-outline-dark border form-control">Back to movies</a>
			</div>
		</div>
	</div>
</form>